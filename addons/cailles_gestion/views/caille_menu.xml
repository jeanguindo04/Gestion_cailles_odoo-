<odoo>
    <menuitem id="menu_caille_root" name="Cailles Ivoire" sequence="-1"/>
    <menuitem id="menu_caille_ventes" name="Ventes" parent="menu_caille_root" sequence="20"/>
    <menuitem id="menu_caille_ventes_list" name="Toutes les ventes" parent="menu_caille_ventes" action="action_caille_ventes" sequence="20"/>
