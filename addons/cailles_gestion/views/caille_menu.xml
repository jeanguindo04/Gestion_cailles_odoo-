     <!-- Sous-menus Ventes par statut -->
    <record id="action_caille_ventes_brouillon" model="ir.actions.act_window">
        <field name="name">Ventes en brouillon</field>
        <field name="res_model">caille.ventes</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_brouillon': 1}</field>
        <field name="domain">[('statut', '=', 'brouillon')]</field>
    </record>

    <record id="action_caille_ventes_confirme" model="ir.actions.act_window">
