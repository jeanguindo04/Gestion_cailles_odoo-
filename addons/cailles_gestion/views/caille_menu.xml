        <field name="domain">[('statut', '=', 'confirme')]</field>
    </record>

    <record id="action_caille_ventes_paye" model="ir.actions.act_window">
        <field name="name">Ventes pay√©es</field>
        <field name="res_model">caille.ventes</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_paye': 1}</field>
